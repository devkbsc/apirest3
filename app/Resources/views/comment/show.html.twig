{% extends 'PetkoparaCrudGeneratorBundle/base.html.twig' %}

{% block title %}
{{ parent() }} - comment
{% endblock %}

{% block body %}

<div id="top" class="row">
    <div class="page-header">
        <h2>View comment <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <p><strong>Id</strong></p>
        <p>
            {{ comment.id }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Name</strong></p>
        <p>
            {{ comment.name }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Email</strong></p>
        <p>
            {{ comment.email }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Body</strong></p>
        <p>
            {{ comment.body }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Post</strong></p>
        <p>
            {{ comment.post }}
        </p>

    </div></div>

<hr/>


<div class="form-group">
    <a class="btn btn-default" href="{{ path('comment') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Back to list
    </a>
</div>


{% endblock %}

